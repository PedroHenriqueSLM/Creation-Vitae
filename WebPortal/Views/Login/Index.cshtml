@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="container-border m-auto">
        <main class="form-signin m-auto">
            <form>
                <img class="mb-4" src="~/lib/Themes/linkedin-png-icon-8.jpg" alt="" width="110" height="97">
                <h1 class="h3 mb-3 fw-normal text-center">Faça seu login</h1>
                <div class="form-floating">
                    <input type="email" class="form-control" id="txtEmail" placeholder="nome@exemplo.com">
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="txtSenha" placeholder="Senha">
                    <label for="floatingPassword">Senha</label>
                </div>
                <div class="checkbox mb-3 alinhamento">
                    <label>
                        <input type="checkbox" value="chkLembreDeMim"> Lembre de mim
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
                <p class="mt-3 alinhamento">
                    <a asp-controller="RecuperacaoSenha" asp-action="Index">Esqueci minha senha</a>
                </p>
                <p class="mt-1">
                    <a asp-controller="CadastroUsuario" asp-action="Cadastro">Não possui uma conta? Realize o cadastro</a>
                </p>

                <p class="mt-5 mb-3 text-muted">© Creation Vitae 2023</p>
            </form>
        </main>
    </div>
</div>